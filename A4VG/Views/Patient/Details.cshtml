<div style="border: 1px dashed #90EE90; padding:5px;">
	<div id="divLoading" style="
	display: none;
	margin: 30px;">

		@*position: absolute;
			top: 50%;
			left: 50%;
			-ms-transform: translate(-50%, -50%);
			transform: translate(-50%, -50%)*@

		<img src="~/Images/loading.gif" width="50" style="display: block; margin: auto;"/>
	</div>

	<div id="divAdmissions">
		@Html.Partial("~/Views/Patient/Admission/_Index.cshtml", Model)
	</div>

</div>

<script type="text/javascript" langauge="javascript">
	//clears divStudents while loading icon is displayed
	//and the next request is being processed
	//otherwise both will be displayed
	function ClearResults() {
		$("#divAdmissions").empty();
	}

	function FailIndex() {
		alert('Error retrieving admissions list.');
	}

	function FailDetails() {
		alert('Error retrieving admission details.');
	}

	function FailEdit() {
		alert('Error editing admission.');
	}

	function FailDelete() {
		alert('Error deleting admission.');
	}

	function FailCreate() {
		alert('Error creating admission.');
	}
</script>